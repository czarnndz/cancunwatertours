<div id="reserva" flex="100" layout="row" layout-align="end start" layout-align-md="center center" layout-align-sm="center center" layout-wrap >
	<div id="cont-reservacion" flex="60" flex-md="90" flex-sm="100" layout="row" layout-align="end start" layout-align-sm="center center" layout-wrap >
		<div id="header-reservacion" flex="100" layout="row" layout-align="center center" >
			<div class="listado-reserva tu-reservacion" flex="33" layout="row" layout-align="center center" layout-sm="column" >
				<div class="num-header-r">1.</div> <div class="titulo-reservacion-h">Tu reservación</div>
			</div>
			<div class="listado-reserva datos-v" flex="33" layout="row" layout-align="center center" layout-sm="column" >
				<div class="num-header-r">2.</div> <div class="titulo-reservacion-h">Datos del Viajero</div>
			</div>
			<div class="listado-reserva pago-r" flex="33" layout="row" layout-align="center center" layout-sm="column" >
				<div class="num-header-r">3.</div> <div class="titulo-reservacion-h">Pago</div>
			</div>
		</div>
		<div id="tu-reservacion" class="activar" flex="100" layout="column" layout-align="start start">
