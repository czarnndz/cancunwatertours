<div id="datos-viajero" ng-class="step == 1 ? 'activar' : 'ng-hide'" ng-cloak>

  <div class="title-block title-block-data booking-form" ng-if="hotel">
    <h3>
      <i class="icon-transporte icono-trans-d"></i>
       <strong><%= __('data_for_tour') %> (<%= __('optional') %>)</strong>
    </h3>
    <input flex="50" flex-sm="100" type="text" ng-model="transferClientName">
  </div>

  <% if(!req.user){ %>
    <div class="block-content">
      <div class="block-content-subtitle">
        <h3><%= __('continue_shopping_as') %></h3>
        <h3><strong><%= __('registered_user') %></strong></h3>
      </div>
      <%- partial('../partials/login-booking') -%>
    </div>
  <% } %>


  <div class="block-content" id="datos-viajero-2">
        <div ng-if="!client" class="block-content-subtitle">
          <h3><%= __('continue_shopping_as') %></h3>
          <h3><strong><%= __('new_user') %></strong></h3>
        </div>
        <p><strong><%= __('data_for_reservation') %></strong></p>
        <p><%= __('booking_label1') %></p>
        <form name="clientData" class="booking-form">

            <div class="input-field-wrap" layout="row" layout-wrap layout-align="space-between start">
              <div flex="45" flex-sm="100">
                <label for="name"><%= __('name') %></label>
                <input
                  type="text"
                  class="input-field"
                  ng-model="client.name"
                  name="name"
                  required
                  ng-class="{'input-field-error': clientData.name.$invalid && validatingClient }"
                  >
              </div>
              <div flex="45" flex-sm="100">
                <label for="last_name"><%= __('last_name') %></label>
                <input
                  type="text"
                  class="input-field"
                  ng-model="client.last_name"
                  name="last_name"
                  ng-class="{'input-field-error': clientData.last_name.$invalid && validatingClient }"
                  required>
              </div>
            </div>

            <div class="input-field-wrap" layout="row" layout-wrap layout-align="space-between center">
              <div flex="45" flex-sm="100">
                <label for="email">E-mail</label>
                <input
                  type="email"
                  class="input-field"
                  ng-model="client.email"
                  name="email"
                  ng-class="{'input-field-error': (clientData.email.$invalid && validatingClient) || (clientData.email.$error.email && validatingClient) }"
                  required>
              </div>
              <div flex="45" flex-sm="100">
                <label for="repeat_email"><%= __('confirm_email') %></label>
                <input
                  type="email"
                  class="input-field"
                  name="repeat_email"
                  required
                  ng-class="{'input-field-error': (clientData.repeat_email.$invalid && validatingClient) || (clientData.repeat_email.$error.email && validatingClient) }"
                  ng-model="repeat_email">
                </div>
            </div>

            <p class="tel-label no-margin"><%= __('phone_number') %></p>

            <div layout="row" layout-wrap layout-align="space-between start">
              <div class="input-field-wrap" flex="30" flex-sm="100">
                  <label for="phone_lada"><%= __('lada') %></label>
                  <input
                    flex="100"
                    class="input-field"
                    type="text"
                    ng-model="client.phone_lada"
                    name="phone_lada"
                    min="3"
                    max="3"
                    ng-class="{'input-field-error': clientData.phone_lada.$invalid && validatingClient }">
              </div>
              <div class="input-field-wrap" flex="60" flex-sm="100">
                  <label for="phone"><%= __('phone_number') %></label>
                  <input
                    flex="100"
                    flex-sm="100"
                    type="text"
                    class="input-field"
                    name="phone"
                    required
                    min="7"
                    ng-class="{'input-field-error': clientData.phone.$invalid && validatingClient }"
                    ng-model="client.phone">

                  <div class="celular">
                    <md-checkbox md-no-ink aria-label="Celular" ng-model="client.isMobile" class="md-primary">
                      <%= __('mobile_phone_number') %>
                    </md-checkbox>
                  </div>
              </div>
            </div>
            <p ng-if="!validPhones"><%= __('phone_number_validation') %></p>

        </form>
    </div>
</div>
