  var theorder = <%- JSON.stringify(theorder) %>;
  var reservations = <%- JSON.stringify(reservations) %>;
  var hasError = '<%- error %>';
  var company = <%- JSON.stringify(company) %>;
</script>
<div ng-controller="voucherCTL">
  <!--LEFT SIDE blueBG-->
  <section class="container-xlg container-pad voucher-container">

    <div class="top-info" layout="row" layout-align="space-between start">
      <div flex="65">
        <div class="voucher-date">
          <p>
            <a href="#" onClick="window.print()">
              <img src="/images/impresora.png" alt="Imprimir"> Imprimir
            </a> / {{order.createdAt | date : 'shortDate'}}</p>
        </div>
        <p>
          <strong>Número de reservación</strong>: <strong class="highlight" ng-bind="order.id"></strong>
        </p>
        <p>
          <strong>Nombre :</strong> <strong class="highlight">{{order.client.name}} {{order.client.last_name}}</strong>
        </p>
      </div>
      <div class="static-info" flex="30">
        <p><a href="/" target="_blank"><img src="/images/watertourslogo.png" class="voucher-logo" alt="WaterTours"></a></p>
        <p><strong>CANCÚN WATER TOURS</strong></p>
        <p>Avenida Bonampak Calle Cereza #1</p>
        <p>SM 2a L. 20 CP 77500 Cancún,</p>
        <p>Quintana Roo, México</p>
        <p><a href="mailto:info@watertours.com">info@watertours.com</a></p>
      </div>
    </div>

    <div layout="row" layout-align="space-between start" ng-repeat="reservation in reservations">
      <div flex="45">

        <!-- VOUCHER ITEM -->
        <div class="voucher-item">
          <h3 class="voucher-title" ng-bind="reservation.reservation_type | uppercase"></h3>
          <p>
            <strong>{{reservation.reservation_type | uppercase}}: </strong> <strong><a class="highlight" href="#" target="_blank" ng-bind="reservation.tour.name"></a></strong>
          </p>
          <p><strong>Duración:</strong> {{reservation.tour.duration_formated}}</p>
          <p ng-if="reservation.schedule"><strong>Horario:</strong> de {{reservation.schedule.from | date:'HH:mm'}} a {{reservation.schedule.to | date:'HH:mm'}}</p>
          <p><strong>Fecha:</strong> {{reservation.startDate | date:'dd/MM/yyyy'}}</p>
          <p><strong>Adultos:</strong> {{reservation.pax}}</p>
          <p ng-if="reservation.kidPax"><strong>Ninios:</strong> {{reservation.kidPax}}</p>
          <p><strong>Total: {{reservation.total | currency}} {{currency | uppercase}}</strong></p>
        </div>
        <!--END VOUCHER ITEM-->

        <!--VOUCHER ITEM-->
        <div class="voucher-item">
          <h3 class="voucher-title">DETALLES DEL TOUR</h3>
          <div class="voucher-prop">
            <p><strong>INCLUYE</strong></p>
            <p>
              <ul>
                  <li ng-repeat="include in reservation.tour.includesList">{{include}}</li>
              </ul>
            </p>
          </div>
          <div class="voucher-prop">
            <p><strong>NO INCLUYE</strong></p>
              <p>
              <ul>
                  <li ng-repeat="include in reservation.tour.notIncludesList">{{include}}</li>
              </ul>
              </p>
          </div>
          <div class="voucher-prop" ng-if="reservation.tour.recommendations_es">
            <p><strong>RECOMENDACIONES</strong></p>
            <p ng-bind-html-unsafe="reservation.tour.recommendations_es"></p>
          </div>
        </div>
        <!--END VOUCHER ITEM-->

      </div>
        <div flex="45" ng-if="$index == 0">
            <!-- VOUCHER ITEM -->
            <div class="voucher-item">
                <h3 class="voucher-title">TOTAL</h3>
                <p><strong>TOTAL: {{total_reservations | currency }} {{currency | uppercase}}.</strong></p>
            </div>
            <!--END VOUCHER ITEM-->
        </div>

    </div>


