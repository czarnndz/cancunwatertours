<div class="cont-menu menu-mobile" hide-gt-sm ng-class="{'menu-mobile-on': toggleMenuMobile}">

  <div layout="row" layout-align="space-around  center " layout-wrap >
    <% for(var i=0;i<meta.categories.length;i++){ %>
      <% if(i === 6) break; %>
      <a href="/resultados?type=<%= meta.categories[i].id %>" flex="100" layout="row" layout-align="center center" >
      <i class="icon-<%= meta.categories[i].name_en.replace(' ','-').toLowerCase() %> icon-desplegable"></i>
      <span><%= meta.categories[i].name.toUpperCase() %></span>
    </a>
    <% } %>
  </div>

  <div class="close-mobile" ng-click="toggleMenuMobile = false">
    <img id="cerrar-menu-movil" src="images/cerrarcel.png" alt="">
  </div>

</div>
