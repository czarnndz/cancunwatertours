<div class="form-modal" id="register-modal" ng-show="registerToggle" layout="row" layout-align="center center" layout-wrap>
  <a class="form-modal-close" href="" ng-click="doRegisterToggle()"><i class="icon-cerrar"></i></a>
  <h3>Registrarse</h3>
  <form method="post" action="/register" flex="100" layout="row" layout-align="center center" layout-wrap>
      <input type="text" name="name" flex="80" type="text" placeholder="Nombre" class="input-re">
      <input type="email" name="email" flex="80" type="text" placeholder="E-mail" class="input-re">
      <input type="password" name="password" flex="80" type="text" placeholder="Contraseña" class="input-re">
      <input type="password" name="password_confirm" flex="80" type="text" placeholder="Confirmar contraseña" class="input-re">
      <input type="submit" value="REGISTRARSE" class="action-btn" flex="80">
  </form>
  <p><strong>ó registrate mediante:</strong></p>
  <a href="/login_fb" class="action-btn fb-btn" flex="80">
    <strong >FACEBOOK</strong>
  </a>
  <p><strong><a ng-click="doLoginToggle()" href="#">¿Ya tienes una cuenta?, Inicia sesión</a></strong></p>
</div>
