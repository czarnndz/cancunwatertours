<div id="cont-cuenta" class="container-xlg">
  <div class="account contact-form container-lg">

    <!--PERSONAL INFO-->
    <form name="contactForm" novalidate ng-submit="doContact($event ,contactForm)">
      <h1><%= __('contact_us') %></h1>
      <p class="alert-msg"><%= page.message %></p>

      <div class="cont-form-cuenta" layout="row" layout-wrap layout-align="space-between center">
        <div class="cont-input-cuenta" flex="45" flex-md="100" flex-sm="100">
          <label><%= __('name') %></label>
          <input
            required
            flex="100"
            type="text"
            name="contactName"
            ng-model="contact.name"
            placeholder="<%= __('name') %>"
            ng-class="{ 'error-field' : contactForm.contactName.$invalid && contactForm.$submitted }"
            class="input-cuenta">
        </div>
        <div class="cont-input-cuenta" flex="45" flex-md="100" flex-sm="100" >
          <label>E-mail</label>
          <input
            required
            flex="100"
            type="email"
            ng-model="contact.email"
            name="contactEmail"
            placeholder="E-mail"
            class="input-cuenta"
            ng-class="{ 'error-field' : contactForm.contactEmail.$invalid && contactForm.contactEmail.$error.email && contactForm.$submitted }">
        </div>
      </div>

      <div>
        <textarea
          required
          cols="30"
          rows="5"
          ng-model="contact.message"
          name="contactMessage"
          placeholder="<%= __('message') %>"
          ng-class="{ 'error-field' : contactForm.contactMessage.$invalid && contactForm.$submitted }">
        </textarea>
      </div>

      <div class="cont-form-cuenta" flex="100" layout="row" layout-align="center center" layout-wrap>
        <div class="cont-input-cuenta" flex="20" flex-md="80" flex-sm="90" layout="row" layout-align="start end" layout-align-md="center center" layout-align-sm="center center" layout-wrap>
          <input type="submit" ng-disabled="sendingMsg" flex="100" class="boton-cuenta" value="<%= __('send') %>">
        </div>
      </div>

    </form>
    <!--END PERSONAL INFO-->


  </div>
</div>
