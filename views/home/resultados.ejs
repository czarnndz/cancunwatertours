<div class="container-xlg" layout-wrap ng-controller="Resultados">

	<div class="search-results-head">
		<h1>Resultado de la búsqueda: <strong>Buceo en Cancún</strong></h1>
		<p>Mostrar paquete por:</p>
	</div>

	<div class="search-results-options">
    <md-radio-group ng-model="data.group1" class="cont-iconos" flex="100" layout="row" layout-align="start start" layout-wrap>

      <div class="search-results-option-item" flex="20" flex-sm="50">
				<i class="icon-precio icono-opciones ap-precio"></i>
				<p>Precio</p>
        <md-radio-button value="Price" class="md-primary"></md-radio-button>
			</div>
			<div class="search-results-option-item" flex="20" flex-sm="50">
				<i class="icon-new icono-opciones ap-nuevas"></i>
				<p>Nuevas</p>
        <md-radio-button value="Nuevas" class="md-primary"></md-radio-button>
			</div>
			<div class="search-results-option-item" flex="20" flex-sm="50">
				<i class="icon-populares icono-opciones ap-populares"></i>
        <p>Populares</p>
        <md-radio-button value="Populares" class="md-primary"></md-radio-button>
			</div>
			<div class="search-results-option-item" flex="20" flex-sm="50">
				<i class="icon-mascompradas icono-opciones ap-mas"></i>
        <p>Más compradas</p>
        <md-radio-button value="Más compradas" class="md-primary"></md-radio-button>
			</div>

      <div class="search-results-option-item tour-type" flex flex-sm="100">
				<p>Tipo de Tour</p>

					<div class="cont-tipo" layout="column" layout-align="center center" flex="70">
					  <md-select placeholder="Tipo de tour" class="custom-select" ng-model="someVal">
					    <md-option value="1">Hotel</md-option>
					    <md-option value="2">Tour</md-option>
					    <md-option value="3">Aventura</md-option>
					  </md-select>
					</div>
			</div>
    </md-radio-group>
	</div>

	<div class="search-results-list" layout="row" layout-align="space-between start" layout-wrap>

    <% for(var i=0;i<9;i++){ %>

    <div flex-sm="100" flex="30" class="tour-item">
      <a href="/detalle" class="absolute-link"></a>
      <div class="tour-item-detail" layout="row" layout-align="space-between center">
        <div flex="60">
          <p>Tour Subasee Explorer</p>
          <p>Cancun</p>
          <p>Categoria: Aventura,Buceo</p>
        </div>
        <div flex="30">
          <p>DESDE</p>
          <p class="tour-item-price">
            <strong>$655</strong> <span>MX</span></p>
        </div>
      </div>
      <div class="tour-item-overlay" flex="100" layout="row" layout-align="center center" >
        <a class="action-btn" href="/detalle">BOOK NOW!</a>
      </div>
    </div>

    <% } %>

	</div>
</div>
