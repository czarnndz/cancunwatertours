<div id="cont-resultados" flex layout="row" layout-align="center start" layout-wrap ng-controller="Resultados">

	<div class="cont-resultados-head" flex="80" flex-sm="95" flex-md="95" layout="column" layout-align="start start" >
		<h1>Resultado de la búsqueda: <strong>Buceo en Cancún</strong></h1>
		<p>Mostrar paquete por:</p>
	</div>

	<div id="opciones-resultados" flex="80" flex-sm="100" flex-md="100">
    <md-radio-group ng-model="data.group1" class="cont-iconos" flex="100" layout="row" layout-align="start start" layout-wrap>

      <div flex="15" flex-sm="50" layout="column" layout-align="start center" class="opciones movil">
				<i class="icon-precio icono-opciones ap-precio"></i>
				<p>Precio</p>
        <md-radio-button value="Price" class="md-primary"></md-radio-button>
			</div>
			<div flex="15" flex-sm="50" layout="column" layout-align="start center" class="opciones movil">
				<i class="icon-new icono-opciones ap-nuevas"></i>
				<p>Nuevas</p>
        <md-radio-button value="Nuevas" class="md-primary"></md-radio-button>
			</div>
			<div flex="15" flex-sm="50" layout="column" layout-align="start center" class="opciones">
				<i class="icon-populares icono-opciones ap-populares"></i>
        <p>Populares</p>
        <md-radio-button value="Populares" class="md-primary"></md-radio-button>
			</div>
			<div flex="30" flex-sm="50" layout="column" layout-align="start center" class="opciones">
				<i class="icon-mascompradas icono-opciones ap-mas"></i>
        <p>Más compradas</p>
        <md-radio-button value="Más compradas" class="md-primary"></md-radio-button>
			</div>
			<div flex flex-sm="100" layout="row" layout-align="center start" class="opciones tipo" layout-wrap>
				<div class="text-opciones tipo" flex="70" layout="row" layout-align="start start" >Tipo de Tour</div>

					<div class="cont-tipo" layout="column" layout-align="center center" flex="70">
					  <md-select class="custom-select" ng-model="someVal">
					    <md-option value="1">Hotel</md-option>
					    <md-option value="2">Tour</md-option>
					    <md-option value="3">Aventura</md-option>
					  </md-select>
					</div>

			</div>
    </md-radio-group>
	</div>

	<div class="cont-resultados" flex="80" flex-sm="100" flex-md="100" layout="row" layout-align="space-between start" layout-wrap>

    <% for(var i=0;i<9;i++){ %>

    <div flex-sm="100" flex="30" layout="row" layout-align="end end" class="imagen-resultados uno">
      <div id="detalles-resultados" class="detalles-resultados-item" layout="row" flex="100" layout-align="start center" layout-wrap>
        <div id="textos-resultados" flex="65" flex-md="100" flex-sm="100" layout="column" layout-align-sm="center center" layout-align-md="center center"   layout-wrap>
          <p>Tour Subasee Explorer</p>
          <p>Cancun</p>
          <p>Categoria: Aventura,Buceo</p>
        </div>
        <div id="precios-resultados" flex="20" flex-sm="100" flex-md="100" layout-align-sm="center center" layout-align-md="center center" layout="column" layout-align="center start" >
          <p>DESDE</p>
          <div class="precio-resultados">$655<strong>MX</strong></div>
        </div>
      </div>
      <div class="book-now" flex="100" layout="row" layout-align="center center" >
        <a href="/detalle"><div class="boton-resultados" layout="row" layout-align="center center" >BOOK NOW!</div></a>
      </div>
    </div>

    <% } %>

	</div>
</div>
