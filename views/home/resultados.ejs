<div ng-controller="resultsCTL" layout="row" layout-wrap ng-style="theStyle" full-screen-wrapper ng-style="newWidth()" >
  <!--LEFT SIDE-->
  <md-content flex="65" flex-md="100" flex-sm="100"><section class="search-results-tours">

    <!--FILTERS-->
    <%- partial('../partials/filters') -%>
    <!--END FILTERS-->

    <div class="container-xlg" layout-wrap>

    	<div ng-hide="loading" class="search-results-list" layout="row" layout-align="space-between start" layout-wrap>
        <div flex-sm="100" flex="50" class="tour-item" ng-repeat="tour in tours | orderBy : orderBy | filter:{visible: true} | toursByCategory:selected | limitTo: (size * page)">
          <div class="tour-item-inner">
            <div class="tour-item-bg" ng-style="{ 'background-image' : 'url(' + tour.avatar3 + ')' }"></div>

            <a href="/tour/{{tour.url}}" class="absolute-link"></a>
            <div class="tour-item-detail" layout="row" layout-align="space-between center">
              <div flex="60">
                <p class="tour-item-detail-title"><strong>{{tour.name}}</strong></p>
                <p>{{tour.location.name}}</p>
                <p>Categorias : {{ getCategoriesString(tour) }}</p>
              </div>
              <div flex="30">
                <p>DESDE</p>
                <p class="tour-item-price">
                  <strong>{{getPriceTour(tour) | currency}}</strong> <span>{{global_currency.currency_code | uppercase}}</span></p>
              </div>
            </div>
            <div class="tour-item-overlay" flex="100" layout="row" layout-align="center center" >
              <a class="action-btn-white" href="/tour/{{tour.url}}">¡RESERVAR!</a>
            </div>
          </div>
        </div>
    	</div>
      <div ng-show="tours && (page * size) < tours.length" layout="row" layout-align="center center">
        <a ng-click="page = page + 1" href="" class="action-btn">Ver más</a>
      </div>
      <div ng-show="loading" class="loading-wrapper" layout="row" layout-align="center center" layout-fill>
        <!--<md-progress-circular md-mode="indeterminate" ></md-progress-circular>-->
        <img src="/images/loader.gif" alt="Cargando...">
      </div>
    </div>
  </section></md-content>

