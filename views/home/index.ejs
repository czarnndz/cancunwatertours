<div id="home" ng-controller="Home">

  <!--<%- partial('../partials/add-transport') -%>-->

  <div ng-show="loading" layout="row" layout-align="center center" full-screen-wrapper ng-style="newWidth()">
    <!--<md-progress-circular md-mode="indeterminate" ></md-progress-circular>-->
    <img src="/images/loader.gif" alt="">
  </div>

  <div ng-show="!loading" id="home-photos" class="tile-container" layout="row" layout-wrap full-screen-wrapper ng-style="newWidth()">

    <div class="slider-container" flex-gt-sm="50" flex="100">

      <slick class="landing-slider"
              speed="500"
              pauseOnHover="true"
              autoplaySpeed="5000"
              autoplay="true"
              fade="true"
              dots="true"
              arrows="false"
              ng-if="toursrand1.length"
              data="toursrand1"
      >
        <div  ng-repeat="tour in toursrand1" class="landing-slider-item transitions">
          <div class="landing-slider-item-bg " lazy-img="{{tour.avatar}}" ng-style="{ 'background-image': 'url({{tour.avatar}})' }"></div>
          <a href="/detalle/{{tour.url}}" class="absolute-link"></a>
          <div class="landing-slider-cover">
            <div class="landing-slider-footer">
              <i class="icon-trending"></i>
              <!-- <h3><strong><a href="#">OFERTA DEL DIA</strong></h3> -->
              <h4><strong>{{tour.name}}</strong></h4>
              <p class="tour-price">{{tour.fee | currency}} </p>
              <p><a href="/detalle/{{tour.url}}" class="action-btn-white transitions"><strong>RESERVAR</strong></a></p>
            </div>
          </div>
        </div>
      </slick>
    </div>

    <div flex-gt-sm="50" flex="100" class="perfecscrollbar">
      <md-grid-list
      md-cols-gt-md="4"
      md-cols-md="2"
      md-cols-sm="1"
      md-row-height="fit"
      md-row-height-sm="400px"
      md-gutter="0px"
      full-screen-wrapper
      >
        <md-grid-tile
        ng-repeat="tour in toursrand2"
        md-colspan-gt-md="{{tour.collgspan}}"
        md-rowspan-gt-md="{{tour.rowlgspan}}"
        md-colspan-md="{{tour.colmdspan}}"
        md-rowspan-md="{{tour.rowmdspan}}"
        md-colspan-sm="1"
        md-rowspan-sm="1"
        class="landing-tour"
        layout-align-gt-sm="center center"
        >
          <div class="landing-tour-background "
              lazy-img="{{tour.avatar}}"
              ng-style="{ 'background-image': 'url({{tour.avatar}})' }"
          ></div>
          <a href="/detalle/{{tour.url}}" class="absolute-link"></a>
          <md-grid-tile-footer class="landing-tour-content" layout="column" layout-align-gt-sm="space-around center" layout-align-sm="center center">
            <i class="icon-trending"></i>
            <!-- <h3><strong><a href="#">OFERTA DEL DIA</strong></h3> -->
            <h4><strong><a href="/detalle/{{tour.url}}">{{tour.name}}</strong></h4>
            <p class="tour-price">{{tour.fee | currency}} </p>
            <p><a href="/detalle/{{tour.url}}" class="action-btn-white transitions"><strong>RESERVAR</strong></a></p>
            <!--<p><a href="" ng-click="selectTour(tour)" class="action-btn"><strong>RESERVAR</strong></a></p>-->
          </md-grid-tile-footer>
        </md-grid-tile>
      </md-grid-list>

      <md-grid-list
      md-cols-gt-md="4"
      md-cols-md="2"
      md-cols-sm="1"
      md-row-height="fit"
      md-row-height-sm="400px"
      md-gutter="0px"
      full-screen-wrapper
      >
        <md-grid-tile
        ng-repeat="tour in toursrand3"
        md-colspan-gt-md="{{tour.collgspan}}"
        md-rowspan-gt-md="{{tour.rowlgspan}}"
        md-colspan-md="{{tour.colmdspan}}"
        md-rowspan-md="{{tour.rowmdspan}}"
        md-colspan-sm="1"
        md-rowspan-sm="1"
        class="landing-tour"
        layout-align-gt-sm="center center"
        >
          <div class="landing-tour-background transitions"
              ng-style="{ 'background-image': 'url({{tour.avatar}})' }"
          ></div>
          <a href="/detalle/{{tour.url}}" class="absolute-link"></a>
          <md-grid-tile-footer class="landing-tour-content" layout="column" layout-align-gt-sm="space-around center" layout-align-sm="center center">
            <i class="icon-trending"></i>
            <!-- <h3><strong><a href="#">OFERTA DEL DIA</strong></h3> -->
            <h4><strong><a href="/detalle/{{tour.url}}">{{tour.name}}</strong></h4>
            <p class="tour-price">{{tour.fee | currency}} </p>
            <p><a href="/detalle/{{tour.url}}" class="action-btn-white transitions"><strong>RESERVAR</strong></a></p>
            <!--<p><a href="" ng-click="selectTour(tour)" class="action-btn"><strong>RESERVAR</strong></a></p>-->
          </md-grid-tile-footer>
        </md-grid-tile>
      </md-grid-list>
    </div>

  </div>
</div>
