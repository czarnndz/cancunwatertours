<div id="home" ng-controller="Home">
  <%- partial('../partials/add-transport') -%>
  <div>
      <md-grid-list md-cols-gt-md="8" md-cols-sm="1" md-cols-md="6" md-row-height-gt-md="1:1" md-row-height="4:3">
        <md-grid-tile
          ng-repeat="tour in tours"
          ng-style="{
              'background-image': 'url({{tour.icon}})',
              'background-repeat':'no-repeat',
              'background-position':'center',
              'background-size': 'cover'
          }"
          md-colspan-gt-sm="{{tour.colspan}}"
          md-rowspan-gt-sm="{{tour.rowspan}}"
          class="tour-item"
          layout-align-gt-sm="center center">
          <md-grid-tile-footer class="tour-item-content" layout="column" layout-align-gt-sm="space-around center" layout-align-sm="center center">
            <a href="/detalle/{{tour.id}}" class="absolute-link"></a>
            <h4><strong><a href="/detalle/{{tour.id}}">{{tour.name}}</strong></h4>
            <p>desde</p>
            <p class="tour-price">{{tour.fee | currency}} </p>
            <p><a href="/detalle/{{tour.id}}" class="action-btn"><strong>RESERVAR</strong></a></p>
            <!--<p><a ng-click="selectTour(tour)" class="reservar-tour">RESERVAR</a></p>-->
          </md-grid-tile-footer>
        </md-grid-tile>

      </md-grid-list>
  </div>

</div>
